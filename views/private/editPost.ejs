<h3 class="mt-2 text-center">ویرایش پست</h3>
<div class="w-50 mx-auto">
    <%- include("../includes/validationErrors.ejs") %>
</div>
<div class="d-flex align-items-center justify-content-center">
    <form action="/dashboard/edit-post/<%=post._id  %>" class="w-50" method="POST">
        <div class="form-group">
            <label for="title">عنوان پست</label>
            <input type="text" class="form-control w-50" name="title" id="title" value="<%=post.title  %>" />
        </div>





        <div class="form-group">
            <label for="status">وضعیت</label>
            <select name="status" class="form-control w-25" id="status">

                <option value="<%=post.status  %>" selected><%=post.status=="public"?"عمومی":"خصوصی"  %></option>
                <option value="<%=post.status=="public"?"private":"public"  %>"><%=post.status=="public"?"خصوصی":"عمومی"  %></option>
            </select>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <button class="btn btn-sm  btn-outline-secondary" type="button" id="imageUpload">
                    اپلود عکس
                </button>

            </div>
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="selectedImage">
                <label for="selectedImage" class="custom-file-label" id="imageStatus">
                    عکس مورد نظر خود را انتخاب کنید
                </label>

            </div>

        </div>
        <div class="form-group" id="range" style="display: none;">
            <div class="progress">
                <div class="progress-bar progress-bar-striped progress-bar-animated" id="inputRange" role="progressbar"
                    aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style=""></div>
            </div>
        </div>

        <div class="w-100 bg-light text-center">
            <p id="uploadResult" class="overflow-auto"> آدرس عکس اپلود شده :</p>
        </div>


        <div class="form-group">
            <h5>متن اصلی پست</h5>
            <textarea name="body" class="form-control" id="body"><%=post.body %></textarea>
        </div>

        <div class="row">
            <input type="submit" value="ویرایش پست" class="btn btn-success m-2" />
            <a href="/dashboard" class="btn btn-warning m-2">انصراف</a>
        </div>
    </form>
</div>