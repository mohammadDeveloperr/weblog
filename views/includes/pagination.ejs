<nav>
    <ul class="pagination justify-content-center    ">

       
        <% if(hasPreviusPage) {%>
            <li class="page-item"><a class="page-link" href="?page=<%=previusPage  %>">
                    <%=previusPage %>
                </a></li>
         <% } %>

                <li class="page-item active"><a class="page-link" href="?page=<%=currentPage %>">
                        <%=currentPage %>
                    </a></li>

         <% if(hasNextPage) {%>
                    <li class="page-item"><a class="page-link" href="?page=<%=nextPage  %>">
                            <%=nextPage %>
                        </a></li>
         <% } %>

        <% if(lastPage>currentPage && lastPage>nextPage) {%>

        <li class="page-item"><a class="page-link" href="?page=<%=lastPage  %>">
            <%=lastPage %>
        </a></li>

        <% } %>
    </ul>
</nav>